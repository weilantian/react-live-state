{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNExt",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declarationDir": "types",
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
